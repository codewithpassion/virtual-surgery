<script type="application/javascript">
  $( document ).ready(function() {

    var overlayText = [
      { start: 300, end: 307, quiz: false, text: 'The cystic artery has been clipped and divided, and the surgeon zooms back for a wider view.'},
      { start: 310, quiz:true, layerId: 'quiz1', correctAnswer: 'B', slidesSource: 'someURL/' }
    ];


    var player = videojs('course1_video');
    player.ready(function() {
      var myPlayer = this;
      myPlayer.on('loadedmetadata', function(){
        myPlayer.currentTime(5*60 + 5);
        myPlayer.play();
      });

      myPlayer.on('timeupdate', function() {
        var textSet = false;
        overlayText.forEach(function(text) {
          console.log(myPlayer.currentTime());
          if (myPlayer.currentTime() >= text.start && myPlayer.currentTime() <= text.end) {
            if (!text.quiz) {
              $('#textOverlay').text(text.text);
              textSet = true;
            }
          }
          if (myPlayer.currentTime() >= text.start && text.quiz === true) {
            myPlayer.pause();
            $('#' + text.layerId).removeClass('hide');
          }
        });
        if (!textSet) { $('#textOverlay').text(''); }
      });
    });
  });
</script>
